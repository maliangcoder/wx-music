<!--components/song-item-v1/song-item-v1.wxml-->
<view class="song-item" bind:tap="onSongItemTap">
	<image class="image" src="{{ itemData.al.picUrl }}" mode=""/>
	<view class="content">
		<view class="name">{{ itemData.name }}</view>
		<view class="source">{{ itemData.ar[0].name }}</view>
	</view>
	<view class="arrow">
		<van-icon name="arrow" />
	</view>
</view>